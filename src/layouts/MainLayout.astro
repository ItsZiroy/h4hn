---
import ThemeToggle from "../components/ThemeToggle.astro";
import WarpButton from "../components/WarpButton.astro";
import Layout from "./Layout.astro";

const pathname = Astro.url.pathname;

const { is404 } = Astro.props;
---

<Layout>
  <nav
    class="w-full grid grid-cols-12 grid-rows-1 fixed top-0 left-0 z-50 bg-neutral text-black dark:text-white"
  >
    <div class="col-span-2"></div>
    <div
      class="max-w-5xl col-span-8 px-6 py-4 flex justify-center gap-1 md:gap-8"
    >
      <a href="/resume">
        <WarpButton
          warpProps={{ offsetX: -1 }}
          buttonProps={{ className: "text-xs md:text-base w-10 sm:w-full" }}
          showWarp={pathname === "/resume"}>Resume</WarpButton
        >
      </a>
      <a href="/">
        <WarpButton
          warpProps={{ offsetX: 0 }}
          buttonProps={{
            className: "text-sm md:text-lg w-25 sm:w-full",
          }}
          showWarp={pathname === "/" || is404}>Yannik Hahn</WarpButton
        >
      </a>
      <a href="/projects">
        <WarpButton
          warpProps={{ offsetX: 1 }}
          buttonProps={{ className: "text-xs md:text-base w-10 sm:w-full" }}
          showWarp={pathname === "/projects"}>Projects</WarpButton
        >
      </a>
    </div>
    <div class="col-span-2 flex justify-end mr-3 sm:mr-5">
      <ThemeToggle />
    </div>
  </nav>
</Layout>

<main class="relative pt-20">
  <slot />
</main>
